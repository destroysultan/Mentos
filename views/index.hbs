    <div class="container">
      <div class="blockquote">
        <blockquote>
        <p>View upcoming mentors, past mentors, and schedule new ones.</p>
        </blockquote>
      </div><br />


      <div class="panel panel-info">
        <div class="panel-heading">
          <h4>Upcoming Mentors <small>Upcoming mentors scheduled to speak</small></h4> 
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>Title, Company</th>
              <th>Student</th>
              <th>Add to gCal</th>
            </tr>
          </thead>
          <tbody>
            {{#each upcoming}}
            <tr>
              <th>{{datetime}}</th>
              <td>

              <a href="#" data-toggle="modal" data-target="#basicModal">              {{mentorname}}</a>

              </td>
              <td>{{titlecompany}}</td>
              <td>{{student}}</td>
              <td><a href="https://www.google.com/calendar/render?action=TEMPLATE&text=Mentor%20Talk:%20{{mentorname}}&dates={{datetimeCalendar}}&location=855%20Front%20St%20San%20Francisco&sprop=name:Name&sprop=website:EventWebite&details=Who:%20{{mentorname}}%20-%20{{titlecompany}}%0A%0ADetails:%20{{tellusaboutyourmentor}}&sf=true&output=xml" target="_blank" class="btn btn-danger btn-xs" role="button">Create Event</a></td>
            </tr>


            <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">

                  <div class="modal-body">
                    <h2>{{mentorname}}</h2>
                    <h3>{{titlecompany}}</h3>
                    <br>
                    <h3>About:</h3>
                    <p> {{tellusaboutyourmentor}}</p>

                    {{#if linkedin}}
                      <a href="{{linkedin}}" target="_blank">LinkedIn</a>
                    {{/if}}

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>

            {{/each}}
          </tbody>
        </table>
      </div><br />

      <div class="panel panel-success">
        <div class="panel-heading">
          <h4>Open Mentor Slots <small>Book away!</small></h4> 
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Day/Time</th>
              <th>Book this slot</th>
            </tr>
          </thead>
          <tbody>
            {{#each slots}}
            <tr>
                <td>
                  {{this}}
                </td>
              <td><a class="formLink btn btn-primary btn-xs" role="button" target="_blank">Book now</a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div><br />

      <div class="panel panel-warning">
        <div class="panel-heading">
          <h4>Past Mentors <small>Previous mentors, info and links to audio (coming soon)</small></h4>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>Title, Company</th>
              <th>Student</th>
            </tr>
          </thead>
          <tbody>
            {{#each past}}
            <tr>
              <th>{{datetime}}</th>
              <td>
              {{#if linkedin}}
                <a href="{{linkedin}}" target="_blank">
              {{/if}}
              {{mentorname}}
              {{#if linkedin}}
                </a>
              {{/if}}
              </td>
              <td>{{titlecompany}}</td>
              <td>{{student}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div><br />

